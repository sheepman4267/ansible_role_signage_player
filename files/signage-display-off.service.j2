[Unit]
Description=Turn off display for ansible-digital-signage
After=graphical.target systemd-user-sessions.service signage-startx.service
Type=forking

[Service]
User={{ signage_user }}

PAMName=login

Environment=DISPLAY=:0

StandardOutput=journal
ExecStart=bash -c "/usr/bin/xrandr --output $(cat /var/ansible-digital-signage/display-output) --off"
Restart=no
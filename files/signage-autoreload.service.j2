[Unit]
Description=Reload displayed webpage for ansible-digital-signage
After=graphical.target systemd-user-sessions.service signage-startx.service
Type=oneshot

[Service]
User={{ signage_user }}

PAMName=login

Environment=DISPLAY=:0

StandardOutput=journal
ExecStart=/usr/bin/xdotool key ctrl+r
Restart=no